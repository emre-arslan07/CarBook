
@{
    ViewData["Title"] = "BlogDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">

            @await Component.InvokeAsync("_BlogDetailsMainComponent", new { id = ViewBag.Id })

            <div class="col-md-4 sidebar ftco-animate">
                
                @await Component.InvokeAsync("_SidebarBoxComponent")
                @await Component.InvokeAsync("_BlogDetailsCategoryComponent")
                @await Component.InvokeAsync("_BlogDetailsRecentBlogsComponent")
                @await Component.InvokeAsync("_BlogDetailsTagCloudComponent", new { id = ViewBag.Id })
                @await Component.InvokeAsync("_BlogDetailsParagraphComponent")

            </div>

        </div>
    </div>
</section>

