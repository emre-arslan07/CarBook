
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Yorum Yapın</h3>
    <form asp-action="AddComment" asp-controller="Blog" class="p-5 bg-light" method="post">
        <div class="form-group">
            <label for="name">Ad Soyad</label>
            <input type="text" class="form-control" name="Name">
        </div>
        <div class="form-group">
            <label for="name">Email</label>
            <input type="email" class="form-control" name="Email">
        </div>
        <input type="hidden" name="BlogId" value="@ViewBag.Id" />
        <div class="form-group">
            <label for="message">Mesaj</label>
            <textarea name="Description" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>