
@{
    ViewData["Title"] = "CarDetail";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section ftco-car-details">
	<div class="container">
		
		@await Component.InvokeAsync("_CarDetailMainCarFeatureComponent", new { id = ViewBag.Id })
		<div class="row">
			<div class="col-md-12 pills">
				<div class="bd-example bd-example-tabs">
					
					@await Component.InvokeAsync("_CarDetailTopPaneComponent")

					<div class="tab-content" id="pills-tabContent">
						
						@await Component.InvokeAsync("_CarDetailCarFeatureByCarIdComponent", new { id = ViewBag.Id })
						@await Component.InvokeAsync("_CarDetailDescriptionByCarIdComponent", new { id = ViewBag.Id })
						@await Component.InvokeAsync("_CarDetailCommentByCarIdComponent", new { id = ViewBag.Id })
						

						
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

