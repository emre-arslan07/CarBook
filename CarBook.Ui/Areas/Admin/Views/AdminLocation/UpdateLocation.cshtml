@model ResultUpdateLocationDTO
@{
    ViewData["Title"] = "UpdateLocation";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Lokasyon Veri Güncelleme Alanı</h4>
                <p class="card-subtitle mb-4">
                    Araçların alındığı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır. Bilgileri eksiksiz olarak doldurun.
                </p>
                <form method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label for="exampleInputName">Lokasyon Adı</label>
                        <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Lokasyon Adını Giriniz">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

