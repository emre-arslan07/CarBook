
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_AdminHeaderComponent")
<body>

    <!-- Begin page -->
    <div id="layout-wrapper">
        
        @await Component.InvokeAsync("_AdminNavbarComponent")

        <!-- ========== Left Sidebar Start ========== -->
        
        @await Component.InvokeAsync("_AdminSidebarComponent")

        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            @RenderBody()
                        </div>
                    </div>
                    <!-- end page title -->

                </div>  
            </div>
            <!-- End Page-content -->
            @await Component.InvokeAsync("_AdminFooterComponent")

        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
    <!-- Overlay-->
    <div class="menu-overlay"></div>
    @await Component.InvokeAsync("_AdminScriptComponent")


   
    @await Component.InvokeAsync("Notyf")
    @RenderSection("Scripts", required: false)
</body>

</html>