@model ResultUpdateFeatureDTO
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Araç Özelliği Güncelleme SAyfası</h4>
                <p class="card-subtitle mb-4">Araç ile ilgili özellikleri aşadağıki kutucuğa girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
                <form method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" />
                        <label for="exampleInputName">Özellik Adı</label>
                        <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Özellik Adı Girişi Yapınız">
                    </div>
                    <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>

